<h1>Eat-Da-Burger</h1>
<div>
  <form class="create-update-form" action="/" method="POST">
    <input type="text" name="burger_name">
    <button type="submit">Submit</button>
  </form>
  <h3>Enter a burger you want to eat!</h3>
</div>

<ul class="to-devour-list">
  <h2>To Devour</h2>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <div class="to-devour-name">{{this.burger_name}}</div>
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul class="to-not-devour-list">
  <h2>Finished Devouring</h2>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        <div class="to-not-devour-name">{{this.burger_name}}</div>        
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>